@model Product
<h2 class="text-danger jittery-text">
	@foreach (var letter in "Are you sure you want to delete this Product?")
	{
		<span>@letter</span>
	}
</h2>
<h4>@Model.Title</h4>

<div class="card shadow border-0 mt-4">
	<div class=" card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> Delete Product </h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="Title" />
			<div class="border p-3 mt-4">				
				<div class="mb-3 row">
					<label asp-for="Title"></label>
					<input asp-for="Title" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="Description"></label>
					<input asp-for="Description" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="ISBN"></label>
					<input asp-for="ISBN" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="Author"></label>
					<input asp-for="Author" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="ListPrice"></label>
					<input asp-for="ListPrice" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="Price"></label>
					<input asp-for="Price" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="Price50"></label>
					<input asp-for="Price50" disabled class="form-control" />
					
				</div>
				<div class="mb-3 row">
					<label asp-for="Price100"></label>
					<input asp-for="Price100" disabled class="form-control" />
					
				</div>
				<button type="submit" class="btn btn-danger" style="width:100px"> Delete </button>
				<a asp-controller="Product" asp-action="Index" class="btn-secondary" style="width:100px; margin-left: 50px">Back To List</a>
			</div>
		</form>
	</div>
</div>


